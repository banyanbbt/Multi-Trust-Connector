<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Name</th>
      <th>Avatar</th>
      <th>Description</th>
      <th>Website</th>
      <th>Application token</th>
      <th>Version</th>
      <th>Support platform</th>
      <th>Download link</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.customer_id %></td>
        <td><%= product.name %></td>
        <td><%= product.avatar %></td>
        <td><%= product.description %></td>
        <td><%= product.website %></td>
        <td><%= product.application_token %></td>
        <td><%= product.version %></td>
        <td><%= product.support_platform %></td>
        <td><%= product.download_link %></td>
        <td><%= product.status %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

